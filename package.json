{
  "name": "nextjs-tailwind-redux-boilerplate",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "export": "next build && next export",
    "start": "next start",
    "lint": "eslint 'src/**/*.{ts,tsx}' --fix && eslint 'pages/**/*.{ts,tsx}' --fix",
    "prettify": "prettier -c --write src/**/* && prettier -c --write pages/**/*",
    "prepare": "husky install",
    "install:clean": "rm -rf node_modules/ && yarn",
    "pre-commit": "lint-staged"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^1.9.5",
    "axios": "^1.4.0",
    "jwt-decode": "^3.1.2",
    "lodash": "^4.17.21",
    "next": "13.4.4",
    "next-redux-wrapper": "^8.1.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-redux": "^8.0.5",
    "react-toastify": "^9.1.3",
    "redux": "^4.2.1",
    "redux-saga": "^1.2.3",
    "reselect": "^4.1.8",
    "universal-cookie": "^4.0.4"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.195",
    "@types/node": "20.2.5",
    "@types/react": "18.2.7",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "autoprefixer": "^10.4.14",
    "eslint": "8.41.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-next": "13.4.4",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-redux": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.3",
    "immer": "^10.0.2",
    "lint-staged": "^13.2.2",
    "postcss": "^8.4.24",
    "prettier": "^2.8.8",
    "sass": "^1.62.1",
    "tailwindcss": "^3.3.2",
    "typescript": "5.0.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "bash scripts/log-alert-hook.sh && lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint 'src/**/*.{ts,tsx}' --fix",
      "prettier -c --write src/**/*",
      "git add --force"
    ],
    "pages/**/*.{ts,tsx}": [
      "eslint 'pages/**/*.{ts,tsx}' --fix",
      "prettier -c --write pages/**/*",
      "git add --force"
    ]
  },
  "engines": {
    "npm": "please-use-yarn",
    "node": "18.16.0",
    "yarn": ">=1.22.0"
  }
}
